<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="user">

	<insert id="insert" parameterType="uservo">
		<![CDATA[
			insert 
				into user 
			values(null, #{name}, #{email}, #{password}, #{gender}, now())
		]]>
		
		<selectKey keyProperty="no" resultType="Long" order="AFTER">
			<![CDATA[
				select last_insert_id()
			]]>		
		</selectKey>
	</insert>

	<select id="getByEmailAndPassword" resultType="uservo"
		parameterType="map">
		<![CDATA[
			select no, name from user
			where email=#{email} and password=#{password}
		]]>
	</select>

	<select id="getByNo" resultType="uservo" parameterType="Long">
		<![CDATA[
			select * from user
			where no = #{no}
		]]>
	</select>
	
	<update id="update" parameterType="uservo">
		<![CDATA[
			update 
				user 
				set name=#{name}, email=#{email}, password=#{password}, gender=#{gender}, join_date=now()
				where no=#{no}
		]]>
	</update>
